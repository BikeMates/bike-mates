@model BikeMates.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", data_bind="submit: register" }))
{
    @Html.AntiForgeryToken()
    <div class="register-form-position">
        <fieldset>
            <legend>
                Sign up
                <img src="~/Content/Images/add_user.png" style="margin-bottom: 15px" />
            </legend>
            
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="register-form">
                <div class="alert alert-dismissible alert-danger" hidden="hidden" id="error_message">
                    <strong id="error_details"></strong>
                </div>
                <div class="alert alert-dismissible alert-success" hidden="hidden" id="success_message">
                    <strong>User has been registered successfully, you will be redirected to login page in 2 seconds</strong>.
                </div>
                <div class="register-form-content">
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @data_bind = "textInput: firstName", placeholder = "Required"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.SecondName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control", @data_bind = "textInput: secondName", placeholder = "Required" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @data_bind = "textInput: email", placeholder = "Required" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @data_bind = "textInput: password", placeholder = "Required" })
                        </div>
                    </div>
                    <div class="form-group" style=" white-space: nowrap">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @data_bind = "textInput: confirmPassword", placeholder = "Required" })
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="register-form-button">
                            <input type="submit" id="submitButton" class="btn btn-default" value="Sign Up" />
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </fieldset>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/knockout-3.3.0.js"></script>
<script src="~/Scripts/App_Scripts/RegistrationScript.js"></script>