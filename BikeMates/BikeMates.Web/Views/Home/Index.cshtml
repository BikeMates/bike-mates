@*@model PagedList.IPagedList<BikeMates.DataAccess.Repository.HomeRouteListRepository>*@
@model PagedList.IPagedList<BikeMates.Domain.Entities.Route>
@using PagedList.Mvc
@{
    ViewBag.Title = "BikeMates";
}
<link href="@Url.Content("/Content/PagedList.css")" rel="stylesheet"
      type="text/css" />
<div class="jumbotron">
    <p>
        <select id="sort_order" onchange="CallActionList($(this).val()); return false;"
                <option>select</option>
                <option value="All Routes">All Routes</option>
                <option value="My Routes">My Routes</option>
                <option value="Subscription">Subscription</option>
            </select>
    </p>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

            <li align="left" style="position: absolute; top:100px; left:1100px; ">
                <input type="submit" value="By Date">
                <input type="submit" value="By Title">
                <input type="submit" value="By Participants">
            </li>
        </ul>
    </div>
</div>

<form method="post" action="">
    <input type="hidden" value="???" name="???" />
    <table>
        <tr>
            <td><h4>Location </h4></td>
            <td><input type="text" size="26" value="@ViewBag.Location" name="Location" /> </td>
        </tr>
        <tr>
            <td><h4>Date</h4></td>
            <td>
                <input type="text" size="10" name="Date" />
                <input type="text" size="10" name="Date" />
            </td>
        </tr>
        <tr>
            <td><h4>Distance</h4></td>
            <td>
                <input type="text" size="10" name="Distance" />
                <input type="text" size="10" name="Distance" />
            </td>
        </tr>
    </table>
</form>

<div class="row">
    <style>
        d {
            border: 1px solid black;
            padding: 10px;
        }
    </style>
    <!--table style="margin-left: 305px; height="40"-->
    @foreach (var item in Model)
    {
            <!--tr bgcolor=" #DCDCDC" style=" align-content:center"-->
                <!--td style='text-decoration: underline;'-->
        <p style='border: 1px solid black; padding: 10px; margin-left: 350px;'>
            @Html.DisplayFor(modelItem => item.Name)
            Distance: @Html.DisplayFor(modelItem => item.Distance)
            <!--/td-->
            <!--td style='padding: 5px;  border: 1px solid #a52a2a;'-->
            Date: @Html.DisplayFor(modelItem => item.Start);
            Meeting Place: @Html.DisplayFor(modelItem => item.MeetingPlace);
            Participants:  @Html.DisplayFor(modelItem => item.ParticipantsCount)
            <br />
            <!--/td-->
            <!--td style='padding: 5px;  border: 1px solid #a52a2a;'-->
            Description:
            @Html.DisplayFor(modelItem => item.Description);
        </p>
                <!--/td-->
            <!--/tr-->
    }
    <!--/table-->
</div>


<div style="text-align:center;">

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),

        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "Back",
            LinkToNextPageFormat = "Next",
            LinkToLastPageFormat = ">>"
        })

</div>