@model PagedList.IPagedList<BikeMates.Domain.Entities.Route>
@using PagedList.Mvc
@{
    ViewBag.Title = "BikeMates";
}
<link href="@Url.Content("/Content/PagedList.css")" rel="stylesheet"
      type="text/css" />
<script src="~/Scripts/knockout-3.3.0.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/App_Scripts/Search.js"></script>
<script src="~/Scripts/App_Scripts/SortRoute.js"></script>

<div class=" jumbotron">
    <p>
        <select id="sort_order" onchange="CallActionList($(this).val()); return false;"
                <option>select</option>
                <option value="All Routes">All Routes</option>
                <option value="My Routes">My Routes</option>
                <option value="Subscription">Subscription</option>
            </select>
    </p>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

            <li align="left" style="position: absolute; top:100px; left:1100px; ">
                <input type="submit" value="By Date" id="ByDate" data-bind="valueUpdate: ByDate" >
                <input type="submit" value="By Name" id="ByName" data-bind="valueUpdate: ByName">
                <input type="submit" value="By Participants" id="ByParticipants" data-bind="valueUpdate: ByParticipants">
            </li>
        </ul>
    </div>
</div>


<table style='margin-bottom: -155px;'>
    <tr>
        <td><h4>Location </h4></td>
        <td><input type="text" size="26" id="Location" name="Location" data-bind="valueUpdate: Location" /> </td>
    </tr>
    <tr>
        <td><h4>Date</h4></td>
        <td>
            <input type="text" size="10" id="Date1" name="Date" data-bind="value: Date1" />
            <input type="text" size="10" id="Date2" name="Date" data-bind="value: Date2" />
        </td>
    </tr>
    <tr>
        <td><h4>Distance</h4></td>
        <td>
            <input type="text" size="10" id="Distance1" name="Distance" data-bind="value: Distance1" />
            <input type="text" size="10" id="Distance2" name="Distance" data-bind="value: Distance2" />
        </td>
    </tr>
    <tr>
        <td><button type="button" id="Search">SEARCH</button></td>
    </tr>
</table>
<!--button type="button" id="Search">SEARCH</!--button>


<div class="row">
    <style>
        d {
        border: 1px solid black;
        padding: 10px;
        }
    </style>
    <!--table style="margin-left: 305px; height="40"-->
@foreach (var item in Model)
{
            <!--tr bgcolor=" #DCDCDC" style=" align-content:center"-->
                <!--td style='text-decoration: underline;'-->
    <p style='border: 1px solid black; padding: 10px; margin-left: 500px; margin-top: 1px;'>
        @Html.DisplayFor(modelItem => item.Name)

        Distance: @Html.DisplayFor(modelItem => item.Distance)
        <!--/td-->
        <!--td style='padding: 5px;  border: 1px solid #a52a2a;'-->
        Date: @Html.DisplayFor(modelItem => item.Start);
        Meeting Place: @Html.DisplayFor(modelItem => item.MeetingPlace);
        Participants:  @Html.DisplayFor(modelItem => item.ParticipantsCount)
        <br />
        <!--/td-->
        <!--td style='padding: 5px;  border: 1px solid #a52a2a;'-->
        Description:
        @Html.DisplayFor(modelItem => item.Description);
    </p>
                <!--/td-->
            <!--/tr-->
}
<!--/table-->
</div>


<div style="text-align:center;">

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),

        new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
            LinkToPreviousPageFormat = "Back",
            LinkToNextPageFormat = "Next",
            LinkToLastPageFormat = ">>"
        })

</div>