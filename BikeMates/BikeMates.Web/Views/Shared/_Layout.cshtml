<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -BikeMates</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2"></button>
                <img src="/Content/Images/logo.png" align="left" width="128" height="60" />
                <a href="#" class=" navbar-brand">BikeMates</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-left home-search-form" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default" style="margin-top:1px">Submit</button>
                </form>
                <div data-bind="myBinding">
                    <h2>Binding</h2>
                </div>
                    <ul class="nav navbar-nav navbar-right" id="anonimus">
                        <li><a href="#register" id="registerLink">Sing up</a></li>
                        <li><a href="#login" id="loginLink">Sing in</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" hidden="hidden" id="authorized">
                        <li>
                            <a href="#profile" id="registerLink"><strong id="user-name">Name Surname</strong></a>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="page1" class="container" style="padding-top:50px" data-bind="component: { name: route().page, params: route }"></div>
    </div>
    <script src="App/boot/require.config.js"></script>
   
    <script data-main="App/boot/startup" src="Scripts/require/require.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    @*<script src="~/Scripts/knockout-3.3.0.js"></script>
    <script src="~/Scripts/App_Scripts/AuthScript.js"></script>*@
    <script src="~/Scripts/App_Scripts/LayoutScript.js"></script>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>